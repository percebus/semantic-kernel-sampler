{
  "name": "semantic-kernel-sampler",
  "version": "0.1.0",
  "description": "semantic-kernel sampler",
  "workspaces": [
    "node/*"
  ],
  "private": true,
  "scripts": {
    "npm:install:global:all": "npm install --location global yarn",
    "setup": "npm run npm:install:global:all",
    "setup:ci": "npm run setup",
    "_prettier": "prettier .",
    "prettier:write": "npm run _prettier -- --write",
    "prettier:check": "npm run _prettier -- --check",
    "dockerlint": "dockerlint Dockerfile",
    "lint": "npm run prettier:check",
    "style": "npm run prettier:write",
    "poststyle": "npm run lint",
    "jest:ci": "jest --ci",
    "jest:ci:unit": "npm run jest:ci -- unit.spec.js",
    "jest:ci:rest": "npm run jest:ci -- rest.spec.js",
    "sub:rest-app": "npm --prefix ./node/rest-app",
    "sub:rest-app:test": "npm run sub:rest-app -- test",
    "sub:modelcontextprotocol-typescript-sdk-example": "npm --prefix ./node/modelcontextprotocol-typescript-sdk-example",
    "sub:modelcontextprotocol-typescript-sdk-example:test": "npm run sub:modelcontextprotocol-typescript-sdk-example -- test",
    "sub:posts-mcp-server": "npm --prefix ./node/posts-mcp-server",
    "sub:posts-mcp-server:test": "npm run sub:posts-mcp-server -- test",
    "pretest": "npm run lint",
    "test": "npm run jest:ci:unit && npm run sub:rest-app:test && npm run sub:modelcontextprotocol-typescript-sdk-example:test && npm run sub:posts-mcp-server:test",
    "predev": "npm run style",
    "dev": "bash scripts/node/packages/task.ba.sh test",
    "docker:compose:up": "docker compose up --build",
    "start": "npm run docker:compose:up",
    "validate": "npm run jest:ci:rest"
  },
  "author": "JCystems",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "dockerlint": "^0.3.9",
    "frisby": "^2.1.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.4.2",
    "uuid": "^11.0.5"
  }
}
