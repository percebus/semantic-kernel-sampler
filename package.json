{
  "name": "semantic-kernel-sampler",
  "version": "0.1.0",
  "description": "semantic-kernel sampler",
  "workspaces": [
    "node/*"
  ],
  "private": true,
  "scripts": {
    "npm:install:global:all": "npm install --location global yarn bower",
    "setup": "npm run npm:install:global:all",
    "setup:ci": "npm run setup",
    "_bower": "bower --allow-root",
    "bower:update": "npm run _bower -- update",
    "bower:install": "npm run _bower -- install",
    "bower:install:production": "npm run bower:install -- --production",
    "_prettier": "prettier .",
    "_prettier:xml": "prettier . --plugin=@prettier/plugin-xml",
    "prettier:check:xml": "npm run _prettier:xml -- --check",
    "prettier:write:xml": "npm run _prettier:xml -- --write",
    "prettier:check": "npm run _prettier -- --check",
    "postprettier:check": "npm run prettier:check:xml",
    "prettier:write": "npm run _prettier -- --write",
    "postprettier:write": "npm run prettier:write:xml",
    "dockerlint": "dockerlint Dockerfile",
    "lint": "npm run prettier:check",
    "format": "npm run prettier:write",
    "style": "npm run format",
    "postformat": "npm run lint",
    "jest:ci": "jest --ci",
    "jest:ci:unit": "npm run jest:ci -- unit.spec.js",
    "jest:ci:rest": "npm run jest:ci -- rest.spec.js",
    "_test": "npm run jest:ci:unit && bash scripts/node/workspaces/npm_run.ba.sh test",
    "test": "npm run _test",
    "predev": "npm run format",
    "dev": "npm run _test",
    "modelcontextprotocol:inspector": "npx @modelcontextprotocol/inspector",
    "docker:compose:up": "docker compose up --build",
    "start": "npm run docker:compose:up",
    "start:mcp:inspector": "npm run modelcontextprotocol:inspector",
    "validate": "npm run jest:ci:rest"
  },
  "author": "JCystems",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.5",
    "@prettier/plugin-xml": "^3.4.2",
    "dockerlint": "^0.3.9",
    "frisby": "^2.1.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.4.2",
    "uuid": "^11.0.5"
  }
}
