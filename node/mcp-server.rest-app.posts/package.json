{
  "name": "mcp-server.rest-app.posts",
  "version": "0.1.0",
  "description": "blog post mcp server",
  "keywords": [
    "json-server",
    "blog",
    "posts",
    "comments",
    "mcp",
    "server"
  ],
  "license": "SEE LICENSE IN ../../LICENSE.md",
  "author": "JCystems",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "npm:install:global:all": "npm install --location global yarn",
    "setup": "npm run npm:install:global:all",
    "setup:ci": "npm run setup",
    "_prettier": "prettier .",
    "prettier:check": "npm run _prettier -- --check",
    "prettier:write": "npm run _prettier -- --write",
    "eslint": "eslint .",
    "eslint:fix": "npm run eslint -- --fix",
    "lint": "npm run prettier:check && npm run eslint",
    "style": "npm run prettier:write && npm run eslint:fix",
    "poststyle": "npm run lint",
    "dist": "tsc",
    "build": "npm run dist",
    "pretest": "npm run lint",
    "test": "exit 0",
    "ts-node": "ts-node",
    "modelcontextprotocol:inspector": "npx @modelcontextprotocol/inspector",
    "start": "npm run ts-node",
    "start:mcp:inspector": "npx @modelcontextprotocol/inspector npm run start"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@modelcontextprotocol/inspector": "^0.16.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "zod": "^3.25.76"
  }
